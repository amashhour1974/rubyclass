digraph Lifecycle {

  // ###########################################################################
  graph [layout=fdp, start=1, K=0.5];
  node [shape=none];
  edge [];
  
  // ###########################################################################
  save [shape=oval];

  // ###########################################################################
  save -> before_validation -> validate -> after_validation ->
          before_save -> before_create -> create -> after_create ->
          after_save -> after_commit;
}
